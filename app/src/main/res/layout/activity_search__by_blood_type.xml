<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ipleiria.celsoteixeira.mobileapplication.Activity_search_ByBloodType"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/bloodtype_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/bloodtype_array"
        android:prompt="@string/blood_prompt" />

    <Button
        android:id="@+id/search_bloodtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:onClick="button_searchByBlood"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_searchByBlood" />

</LinearLayout>
